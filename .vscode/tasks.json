{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Debug cpp",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "'${workspaceFolder}/problem.exe'"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "デバッガーによって生成されたタスク。"
    },
  ]
}